% Define un autor con formato personalizado.
% Parámetros:
% #1 = Nombre completo del autor
% #2 = Correo electrónico
% #3 = Institución (si está vacío, se omite)
% #4 = Ciudad, Estado, País
\newcommand{\customauthor}[4]{%
  \begin{minipage}[t]{\linewidth}
    \centering
    \textbf{#1} \\            % Nombre en negritas
    #2 \\                     % Correo electrónico
    \ifthenelse{\equal{#3}{}}{}{%
      \texttt{#3} \\          % Institución (en monoespaciado si se proporciona)
    }
    #4                        % Ciudad, Estado, País
  \end{minipage}
}

% Muestra una fila de autores centrada con 1 autor (uso en portada o encabezado)
\newcommand{\authorrowone}[1]{%
\begin{center}
\begin{tabularx}{0.5\textwidth}{>{\centering\arraybackslash}X}
#1
\end{tabularx}
\end{center}
}

% Muestra una fila de autores centrada con 2 autores
\newcommand{\authorrowtwo}[2]{%
\begin{center}
\begin{tabularx}{0.75\textwidth}{>{\centering\arraybackslash}X >{\centering\arraybackslash}X}
#1 & #2
\end{tabularx}
\end{center}
}

% Muestra una fila de autores centrada con 3 autores
\newcommand{\authorrowthree}[3]{%
\begin{center}
\begin{tabularx}{\textwidth}{>{\centering\arraybackslash}X >{\centering\arraybackslash}X >{\centering\arraybackslash}X}
#1 & #2 & #3
\end{tabularx}
\end{center}
}

